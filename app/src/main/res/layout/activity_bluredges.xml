<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.roshan.seasonalbuddy6.cradbackground.Bluredges">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageAfter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="2">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color1"
                    android:src="@drawable/a8"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />
                <!--
                                <Button
                                    android:id="@+id/color1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Color 1"
                                    android:background="#FFFFFFFF"/>


                -->

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color2"
                    android:src="@drawable/a7"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color4"
                    android:src="@drawable/a10"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color5"
                    android:src="@drawable/a1"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color7"
                    android:src="@drawable/a3"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color9"
                    android:src="@drawable/a6"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color10"
                    android:src="@drawable/a9"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color11"
                    android:src="@drawable/a5"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color12"
                    android:src="@drawable/a11"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color13"
                    android:src="@drawable/a12"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color14"
                    android:src="@drawable/a2"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/color16"
                    android:src="@drawable/a4"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />



            </GridLayout>

        </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="1">
            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:thumb="@drawable/a4"
                android:progressDrawable="@drawable/custom_seekbar_layout"
                android:progress="10"
                android:max="100"
                android:indeterminate="false" />
        <TextView
            android:id="@+id/blurText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp">
    <ImageButton
        android:id="@+id/doProcess"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:layout_marginRight="50dp"
        android:src="@drawable/undo"
        android:background="@drawable/button_round" />

    <ImageButton
    android:id="@+id/send_btn"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:text="Done"
        android:background="@drawable/button_round"
        android:src="@drawable/checked" />
</LinearLayout>

</LinearLayout>
