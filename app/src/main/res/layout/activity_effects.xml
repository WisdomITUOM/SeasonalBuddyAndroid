<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.roshan.seasonalbuddy6.cradbackground.Effects">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgView2"
        android:minHeight="400dp"
        android:minWidth="700dp"
        android:layout_centerHorizontal="true" />
    <!--android:layout_below="@+id/effect_btn3"-->


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_1_yellow"
                android:id="@+id/effect_btn0"
                android:src="@drawable/p1"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_1_yellow"
                android:id="@+id/effect_btn1"
                android:src="@drawable/p1"/>



            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_2_pink"
                android:id="@+id/effect_btn2"
                android:src="@drawable/p2"/>



            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_3_green"
                android:id="@+id/effect_btn3"
                android:src="@drawable/p3"/>


            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_4_gray"
                android:id="@+id/effect_btn4"
                android:src="@drawable/p1"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_5_bright"
                android:id="@+id/effect_btn5"
                android:src="@drawable/shazee"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_6_dark"
                android:id="@+id/effect_btn6"
                android:src="@drawable/s3"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_7_gamma"
                android:id="@+id/effect_btn7"
                android:src="@drawable/shazee1"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_8_green"
                android:id="@+id/effect_btn8"
                android:src="@drawable/shazee"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_9_blue"
                android:id="@+id/effect_btn9"
                android:src="@drawable/s3"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_10_blue"
                android:id="@+id/effect_btn10"
                android:src="@drawable/s3"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_11_blue"
                android:id="@+id/effect_btn11"
                android:src="@drawable/s3"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_12_blue"
                android:id="@+id/effect_btn12"
                android:src="@drawable/s3"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Effect_13_blue"
                android:id="@+id/effect_btn13"
                android:src="@drawable/s3"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_send"
        android:background="@drawable/button_round"
        android:src="@drawable/checked"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

        </LinearLayout>

</LinearLayout>