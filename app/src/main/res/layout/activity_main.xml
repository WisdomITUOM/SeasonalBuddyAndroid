<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".mainpage.MainActivity"
    android:background="@drawable/bgmainpage1">

    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toRightOf="@+id/gif_view1"
        android:layout_toEndOf="@+id/gif_view1" />
    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix" />
    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp" />
    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp" />
    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp" />

    <com.example.roshan.seasonalbuddy6.mainpage.GifView
        android:id="@+id/gif_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snow"
        android:scaleType="matrix"
        android:layout_weight="1"
        android:layout_marginLeft="250dp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/linearLayout">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="Seasonal Buddy"
           android:id="@+id/textView"
           android:layout_weight="1"
           android:textSize="40dp"
           android:textAlignment="center"
           android:textColor="@color/colorFAB1"
           android:textStyle="bold"
           android:typeface="sans"
           android:visibility="invisible" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card"
            android:background="@drawable/button_round"
            android:id="@+id/btnCard"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/reminderBtn"
            android:layout_alignStart="@+id/reminderBtn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGame"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/technology"
            android:background="@drawable/button_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Games"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@android:drawable/ic_dialog_info"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminderBtn"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/reminder"
        android:background="@drawable/button_round"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cards"
        android:id="@+id/textView2"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reminder"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/reminderBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
